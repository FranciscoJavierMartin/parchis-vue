{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [".eslintrc.cjs", "./commitlint.config.js", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "baseUrl": ".",
    "noImplicitThis": false,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
