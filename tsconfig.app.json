{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [".eslintrc.cjs", "./commitlint.config.js", "env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "baseUrl": ".",
    "noImplicitThis": false,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@about/*": ["./src/modules/about/*"],
      "@board/*": ["./src/modules/board/*"],
      "@chat/*": ["./src/modules/chat/*"],
      "@common/*": ["./src/modules/common/*"],
      "@debug/*": ["./src/modules/debug/*"],
      "@dice/*": ["./src/modules/dice/*"],
      "@game/*": ["./src/modules/game/*"],
      "@home/*": ["./src/modules/home/*"],
      "@layouts/*": ["./src/modules/layouts/*"],
      "@offline/*": ["./src/modules/offline/*"],
      "@online/*": ["./src/modules/online/*"],
      "@options/*": ["./src/modules/options/*"],
      "@players/*": ["./src/modules/players/*"],
      "@profiles/*": ["./src/modules/profiles/*"],
      "@share/*": ["./src/modules/share/*"],
      "@sounds/*": ["./src/modules/sounds/*"],
      "@tokens/*": ["./src/modules/tokens/*"]
    }
  }
}
